<Defs>

	<ThingDef ParentName="BaseGun">
		<defName>Pulse_Shotgun</defName>
		<label>pulse shotgun</label>
		<description>A pulse-charged shotgun that fires two heavy bursts, releasing unstable energy on impact.</description>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Weapon/Ranged/Pulse_Shotgun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.25</drawSize>
		</graphicData>
		<equippedAngleOffset>25</equippedAngleOffset>
		<soundInteract>Interact_ChargeRifle</soundInteract>
		<destroyOnDrop>true</destroyOnDrop>
		<tradeability>None</tradeability>
		<statBases>
			<MarketValue>2100</MarketValue>
			<Mass>8</Mass>
			<AccuracyTouch>0.55</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.4</AccuracyMedium>
			<AccuracyLong>0.2</AccuracyLong>
			<RangedWeapon_Cooldown>2.25</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>50</Plasteel>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<weaponTags>
			<li>PulseShotgun</li>
		</weaponTags>
		<weaponClasses>
			<li>RangedLight</li>
		</weaponClasses>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Pulse_Proj</defaultProjectile>
				<warmupTime>0.75</warmupTime>
				<range>15.9</range>
				<soundCast>Shot_ChargeBlaster</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>15</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>Pulse_Proj</defName>
		<label>pulse bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Pulse_Proj</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>20</damageAmountBase>
			<stoppingPower>3</stoppingPower>
			<speed>55</speed>
		</projectile>
	</ThingDef>

</Defs>