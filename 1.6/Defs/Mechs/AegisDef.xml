<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="HeavyMechanoid">
    <defName>Mech_Aegis</defName>
    <label>Aegis</label>
    <description>"The Aegis is a mighty mechanoid that sacrifices offensive capabilities for defensive mastery. The phrase 'The best defense is a good offense' rings true with the Aegis' dual shields."</description>
    <statBases>
      <MoveSpeed>1.5</MoveSpeed>
      <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
      <BandwidthCost>3</BandwidthCost>
      <WorkSpeedGlobal>1.5</WorkSpeedGlobal>
    </statBases>
    <race>
      <body>Mech_Aegis</body>
      <baseBodySize>3.5</baseBodySize>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <baseHealthScale>2</baseHealthScale>
      <mechWeightClass>Heavy</mechWeightClass>
      <renderTree>Mech_Aegis_RenderTree</renderTree>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Tunneler_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Tunneler_Death</soundDeath>
          <soundCall>Pawn_Mech_Tunneler_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Tunneler_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Tunneler_Death</soundDeath>
          <soundCall>Pawn_Mech_Tunneler_Call</soundCall>
        </li>
      </lifeStageAges>
      <bulletStaggerEffecterDef>TunnelerSlowedDown</bulletStaggerEffecterDef>
      <detritusLeavings>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>0</texOverrideIndex>
          <spawnChance>0.5</spawnChance>
        </li>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>3</texOverrideIndex>
          <spawnChance>0.5</spawnChance>
        </li>
        <li>
          <def>ChunkMechanoidSlag</def>
          <texOverrideIndex>1</texOverrideIndex>
          <spawnChance>0.5</spawnChance>
        </li>
      </detritusLeavings>
    </race>
    <tools>
      <li>
        <label>left shield</label>
        <labelNoLocation>shield</labelNoLocation>
        <capacities>
          <li>Blunt</li>
          <li>Scratch</li>
        </capacities>
        <power>22</power>
        <cooldownTime>2.9</cooldownTime>
        <linkedBodyPartsGroup>LeftAegisShield</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>right shield</label>
        <labelNoLocation>shield</labelNoLocation>
        <capacities>
          <li>Blunt</li>
	  <li>Scratch</li>
        </capacities>
        <power>22</power>
        <cooldownTime>2.9</cooldownTime>
        <linkedBodyPartsGroup>RightAegisShield</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Shield" />
      <li Class="ApexMechanoids.CompProperties_Aegis">
        <regenerationAmount>2</regenerationAmount> <!-- Amount of HP to regenerate per interval -->
        <regenerationDelaySeconds>60</regenerationDelaySeconds> <!-- Minimum time in seconds before regeneration starts after damage -->
        <regenerationIntervalSeconds>30</regenerationIntervalSeconds> <!-- How often to regenerate in seconds (converted to ticks internally). Uses CompTickRare, any amount less than 4.16 seconds won't work. -->
        <steelRequiredForRepair>50</steelRequiredForRepair> <!-- Amount of steel required for manual repair -->
      </li>
    </comps>
  </ThingDef>
  
  <PawnKindDef ParentName="HeavyMechanoidKind">
    <defName>Mech_Aegis</defName>
    <label>Aegis</label>
    <race>Mech_Aegis</race>
    <allowInMechClusters>true</allowInMechClusters>
    <combatPower>250</combatPower>
    <lifeStages>
      <li MayRequire="Ludeon.RimWorld.Biotech">
        <bodyGraphicData>
          <texPath>Mechs/Aegis/Mechanoid/Aegis</texPath>
          <maskPath>Mechs/Overlays/Aegis_Overlay/Mechanoid/Mech_Aegis</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
	        <texPath>Mechs/Aegis/Mechanoid/AegisAncient</texPath>
          <maskPath>Mechs/Overlays/Aegis_Overlay/Mechanoid/Mech_Aegis</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>   
    <techHediffsChance MayRequire="Ludeon.RimWorld.Biotech">1</techHediffsChance>
    <controlGroupPortraitZoom>1</controlGroupPortraitZoom>  
  </PawnKindDef>

</Defs>