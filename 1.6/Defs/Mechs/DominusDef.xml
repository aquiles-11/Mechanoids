        <combatPower>550</combatPower>
        <maxPerGroup MayRequire="Ludeon.Rimworld.Biotech">2</maxPerGroup>
        <controlGroupPortraitZoom MayRequire="Ludeon.Rimworld.Biotech">0.48</controlGroupPortraitZoom>
