    <label>tinker</label>
    <race>APM_Mech_Tinker</race>
    <combatPower>190</combatPower>
    <lifeStages>
      <li MayRequire="Ludeon.RimWorld.Biotech">
        <bodyGraphicData>
          <texPath>Mechs/Tinker/Tinker</texPath>
          <maskPath>Mechs/Overlays/Tinker_Overlay/Mech_Tinker</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.5</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Mechs/Tinker/TinkerAncient</texPath>
          <maskPath>Mechs/Overlays/Tinker_Overlay/Mech_Tinker</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
